# Set baseline image
# FROM pytorch/pytorch:2.5.1-cuda12.4-cudnn9-devel
FROM pytorch/pytorch:2.1.1-cuda12.1-cudnn8-devel

# Set the working directory
WORKDIR /Morfeus/JChun

